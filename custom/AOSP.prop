# Add calibration file path
ro.config.calibration_cad=/system/etc/calibration_cad.xml

# Properties for limiting preview size in camera
persist.camera.display.umax=1920x1080
persist.camera.display.lmax=1280x720

# Additional buffers shared between Camera and Video
vidc.enc.dcvs.extra-buff-count=2

# System property determining camera HAL to be used for a video call
persist.radio.VT_CAM_INTERFACE=2

# Forced HAL1 packages
vendor.camera.hal1.packagelist=com.android.camera,com.whatsapp,com.facebook.katana,com.gbwhatsapp,com.gbinsta
camera.hal1.packagelist=com.android.camera,com.whatsapp,com.facebook.katana,com.gbwhatsapp,com.gbinsta

# Expose aux camera for below packages
vendor.camera.aux.packagelist=org.codeaurora.snapcam,com.android.camera,com.google.android.GoogleCamera,com.qualcomm.qti.qmmi
camera.aux.packagelist=org.codeaurora.snapcam,com.android.camera,com.google.android.GoogleCamera,com.qualcomm.qti.qmmi

# HAL3 & EIS
persist.camera.HAL3.enabled=1
persist.camera.eis.enable=0

# Dual Camera props
persist.camera.expose.aux=1
persist.camera.preview.ubwc=0
persist.camera.stats.test=0
persist.camera.depth.focus.cb=0
persist.camera.isp.clock.optmz=0
persist.camera.linkpreview=0
persist.camera.isp.turbo=1
persist.camera.awb.sync=2

# Enable video face detect func
persist.camera.fdvideo=1

# System property for camera
persist.camera.enableAdvanceFeatures=0x3E7
persist.camera.mfnrframenum=8
persist.camera.multicam=TRUE
persist.camera.multicam.hwsync=TRUE
persist.camera.multicam.fpsmatch=TRUE
persist.camera.multicam.framesync=1

# Lux / Flash
persist.camera.auxswitch.threshold=330
persist.camera.mainswitch.threshold=419
persist.bokeh.switch.lux=360
persist.imx376_sunny.low.lux=290
persist.imx376_sunny.light.lux=275
persist.imx376_ofilm.low.lux=290
persist.imx376_ofilm.light.lux=275
persist.ov13855_sunny.low.lux=385
persist.ov13855_sunny.light.lux=370
persist.s5k3l8_ofilm.low.lux=379
persist.s5k3l8_ofilm.light.lux=367

# Properties foe exif info
persist.camera.exif.make=Xiaomi
persist.camera.exif.model=Mi 6X
